{
    "name": "@zowe/chat",
    "version": "1.0.0",
    "description": "Zowe Chat mono repository",
    "license": "EPL-2.0",
    "private": true,
    "scripts": {
        "installAll": "npm install --workspaces",
        "updateDeps": "npx npm-check-updates -u",
        "updateDepsAll": "npm run updateDeps --workspaces",
        "lintAll": "npm run lint --workspaces",
        "buildAll": "gulp updateLicense && npm run build --workspaces",
        "checkDepsAll": "npm run checkDeps --workspaces",
        "test:unit": "jest \"__tests__.*?__unit__.*\\.(spec|test)\\.tsx?$\" --coverage ",
        "test:integration": "jest \"__tests__.*?__integration__.*\\.(spec|test)\\.tsx?$\" --coverage false",
        "test:system": "jest \"__tests__.*?__system__.*\\.(spec|test)\\.tsx?$\" --coverage false",
        "test:all": "npm run test:unit && npm run test:integration && npm run test:system",
        "startLocal": "gulp startLocal",
        "packagingAll": "gulp packaging",
        "docker": "docker build -t local/zowe-chat -f scripts/Dockerfile . && docker run -ti local/zowe-chat"
    },
    "workspaces": [
        "packages/chat",
        "packages/zos",
        "packages/clicmd",
        "packages/webapp"
    ],
    "devDependencies": {
        "@types/jest": "^29.2.6",
        "@typescript-eslint/eslint-plugin": ">=5.40.1",
        "@typescript-eslint/parser": ">=5.40.1",
        "@zowe/core-for-zowe-sdk": "^7.7.0",
        "@zowe/zos-files-for-zowe-sdk": "^7.7.0",
        "@zowe/zos-uss-for-zowe-sdk": "^7.7.0",
        "@zowe/zosmf-for-zowe-sdk": "^7.7.0",
        "eslint": ">=8.26.0",
        "eslint-config-google": ">=0.14.0",
        "eslint-plugin-header": "^3.1.1",
        "gulp": ">=4.0.2",
        "gulp-clean": ">=0.4.0",
        "gulp-eslint": ">=6.0.0",
        "gulp-if": ">=3.0.0",
        "gulp-jshint": ">=2.1.0",
        "gulp-typescript": ">=6.0.0-alpha.1",
        "jest": "^29.2.6",
        "jest-environment-jsdom": "^29.3.1",
        "jest-sonar-reporter": "^2.0.0",
        "keytar": "^7.9.0",
        "madge": "^5.0.1",
        "moment": "^2.29.4",
        "semver": "^7.3.8",
        "ts-jest": "^29.0.5",
        "ts-node": ">=10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "4.8.4"
    },
    "jestSonar": {
        "reportPath": "__tests__/__results__/jest-sonar"
    }
}
